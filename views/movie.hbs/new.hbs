<section class="form-container">
  <h3>New Movie </h3>
  <form action="/movie" method="POST" class="movie-form">
    <div class="input-field">
      <textarea name="movie[content]" cols="30" rows="10" placeholder="Movie"></textarea>
    </div>
    <div class="">
      <select name="author" id="author">
        {{#each users}}
          <option value="{{id}}">{{local.email}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-field">
      <input type="submit" value="Movie" class="btn">
    </div>
  </form>
</section>