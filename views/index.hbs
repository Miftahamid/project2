 {{!-- I have styled it as the youtube vidio and go the uploade from there  --}}
<div class="jumbotron">
    <h1 class="display-4">Movie Bloger</h1>
    <p class="lead"> </p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
    <a class="btn btn-primary btn-lg" href="/signup" role="button">New Bloger</a>
</div>
 
{{#each photo}}
 
    <div>
        <div class="card">
            <img class="card-img-top" src="{{path}}" alt="Card image cap">
            <div>
                {{#if author}}
                <form action="/index/{{id}}?_method=DELETE" method="POST" accept-charset="utf-8">
                    <button style="margin-top: 5px" type="submit" value="Delete" class="btn btn-danger">Remove </button>
                </form>
                {{/if}}
            </div>
            <div class="card-body">
                <h5 class="card-title">Comments: {{comments.length}}</h5>
                {{#if comments}}
                {{#each comments}}
                <p class="card-text">{{content}}</p>
                {{/each}}
                {{/if}}


                <form action="/{{id}}?_method=PUT" method="POST" class="row">
                    <label for="exampleFormControlTextarea1"></label>
                    <textarea type="text" name="content" class="form-control" id="" rows="3"></textarea>
                    <button style="margin-top: 5px" class="btn btn-primary" id="photobutton" type="submit">Enter
                        Comment</button>
                </form>

            </div>
        </div>
    </div>

</div>
{{/each}}